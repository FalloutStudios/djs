{
    "name": "djs",
    "private": true,
    "description": "A monorepo of discord.js utility packages",
    "scripts": {
        "postinstall": "npx lerna bootstrap",
        "clean": "npx rimraf ./packages/bin ./packages/dist",
        "build": "npm run clean && npx lerna run build",
        "docs": "npx typedoc",
        "test": "npx reciple ./test --env \".env\""
    },
    "devDependencies": {
        "@mxssfd/typedoc-theme": "^1.1.1",
        "@types/node": "^20.2.5",
        "discord.js": "^14.11.0",
        "lerna": "^6.6.2",
        "rimraf": "^5.0.1",
        "typedoc": "^0.24.7",
        "typescript": "^5.0.4"
    },
    "workspaces": [
        "packages/*",
        "test"
    ],
    "dependencies": {
        "reciple": "^7.7.3"
    }
}

{
    "name": "djs",
    "private": true,
    "description": "A monorepo of discord.js utility packages",
    "scripts": {
        "clean": "npx rimraf ./packages/bin ./packages/dist",
        "build": "npm run clean && npx lerna run build",
        "docs": "npx typedoc",
        "test": "npx reciple ./test --env \".env\""
    },
    "devDependencies": {
        "@mxssfd/typedoc-theme": "^1.1.2",
        "@types/node": "^20.4.9",
        "discord.js": "^14.12.1",
        "lerna": "^7.1.5",
        "rimraf": "^5.0.1",
        "typedoc": "^0.24.8",
        "typescript": "^5.1.6"
    },
    "workspaces": [
        "packages/*",
        "test"
    ]
}

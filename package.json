{
    "name": "djs",
    "private": true,
    "description": "A monorepo of discord.js utility packages",
    "scripts": {
        "postinstall": "npx lerna bootstrap",
        "clean": "npx rimraf ./packages/bin ./packages/dist",
        "build": "npm run clean && npx lerna run build",
        "docs": "npx typedoc",
        "test": "cd test && npx reciple ./test --env \"../.env\""
    },
    "devDependencies": {
        "@mxssfd/typedoc-theme": "^1.1.1",
        "@types/node": "^18.15.11",
        "discord.js": "^14.9.0",
        "lerna": "^6.6.1",
        "rimraf": "^5.0.0",
        "typedoc": "^0.24.4",
        "typescript": "^5.0.4"
    },
    "workspaces": [
        "packages/*",
        "test"
    ],
    "dependencies": {
        "reciple": "^7.3.1"
    }
}

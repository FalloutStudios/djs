{
  "name": "djs",
  "private": true,
  "description": "A monorepo of discord.js utility packages",
  "scripts": {
    "clean": "npx rimraf ./packages/*/bin ./packages/*/dist",
    "build": "npm run clean && npx lerna run build",
    "docs": "npx typedoc",
    "test": "npx reciple ./test --env \".env\""
  },
  "devDependencies": {
    "@mxssfd/typedoc-theme": "^1.1.3",
    "@types/node": "^20.11.10",
    "discord.js": "^14.14.1",
    "lerna": "^8.0.2",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "packages/*",
    "test"
  ],
  "dependencies": {
    "nx": "^17.3.0"
  }
}
